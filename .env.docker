# Docker Compose Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================
# Docker-Specific Configuration
# ============================================

# Port for the application (if API server is added)
PORT=3000

# Volume paths for data persistence (relative to docker-compose.yml)
DATA_VOLUME_PATH=./data
LOGS_VOLUME_PATH=./logs

# ============================================
# Logging Configuration
# ============================================

LOG_LEVEL=info

# ============================================
# Agent Configuration
# ============================================

MAX_AGENT_DEPTH=5
MAX_AGENTS_PER_MANAGER=10
AGENT_TIMEOUT_MS=300000

# ============================================
# Execution Configuration
# ============================================

WORKER_POOL_SIZE=5
CONTINUOUS_EXECUTION_INTERVAL_MS=5000

# ============================================
# Framework Adapters
# ============================================

DEFAULT_FRAMEWORK=claude-code

# ============================================
# Database Configuration
# ============================================

DATABASE_TYPE=file

# Database Encryption (RECOMMENDED for production)
# Uncomment and set a strong password or 32-byte hex key
# DATABASE_ENCRYPTION_KEY=your-secure-password-here
# DATABASE_ENCRYPTION_USE_KDF=true

# ============================================
# Secret Management (RECOMMENDED for production)
# ============================================

# Uncomment and set a 64-character hex key or strong password
# SECRET_ENCRYPTION_KEY=your-64-char-hex-key-or-strong-password
# SECRET_ENCRYPTION_USE_KDF=false
# SECRET_CACHE_EXPIRY_MS=300000

# ============================================
# AI Provider Configuration
# ============================================

# Multi-Perspective Analysis Provider
AI_PROVIDER=aiceo-gateway
AI_FALLBACK_PROVIDER=glm-direct

# Agent Execution Provider
AGENT_EXECUTION_PROVIDER=aiceo-gateway

# ============================================
# AICEO Gateway Configuration (RECOMMENDED)
# ============================================

# If running AICEO Gateway in the same docker-compose stack:
# AICEO_GATEWAY_URL=http://aiceo-gateway:4000/api/glm/submit

# If running AICEO Gateway on host machine:
AICEO_GATEWAY_URL=http://host.docker.internal:4000/api/glm/submit

# If running AICEO Gateway on remote server:
# AICEO_GATEWAY_URL=https://your-gateway-domain.com/api/glm/submit

AICEO_GATEWAY_API_KEY=your-shared-secret-here
AICEO_GATEWAY_PROVIDER=glm
AICEO_GATEWAY_MODEL=glm-4.7
AICEO_GATEWAY_PRIORITY=high

# ============================================
# Direct GLM Configuration (Fallback)
# ============================================

GLM_API_KEY=your-glm-api-key-here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_MODEL=glm-4.7

# ============================================
# Direct Anthropic Configuration (Alternative)
# ============================================

ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-sonnet-4-5

# ============================================
# Direct OpenAI Configuration (Alternative)
# ============================================

OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4-turbo

# ============================================
# Custom Provider Configuration (Advanced)
# ============================================

# CUSTOM_PROVIDER_URL=https://your-custom-endpoint.com/api/chat
# CUSTOM_PROVIDER_API_KEY=your-custom-api-key-here
# CUSTOM_PROVIDER_FORMAT=openai

# ============================================
# Analysis Configuration
# ============================================

ANALYSIS_CACHE_TTL_MS=3600000

