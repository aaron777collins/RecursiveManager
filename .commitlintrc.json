{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "build", "ci", "chore", "revert"]
    ],
    "scope-enum": [
      2,
      "always",
      ["common", "core", "cli", "scheduler", "adapters", "docs", "config", "deps", "release"]
    ],
    "subject-case": [0]
  }
}
