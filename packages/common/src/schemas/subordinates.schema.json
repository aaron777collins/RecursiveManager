{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://recursivemanager.dev/schemas/subordinates.schema.json",
  "title": "Subordinates Registry",
  "description": "Schema for RecursiveManager subordinate agent tracking",
  "type": "object",
  "required": ["version", "subordinates", "summary"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Registry schema version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "default": "1.0.0"
    },
    "subordinates": {
      "type": "array",
      "description": "List of subordinate agents",
      "items": {
        "type": "object",
        "required": [
          "agentId",
          "role",
          "hiredAt",
          "hiredFor",
          "status",
          "tasksAssigned",
          "tasksCompleted"
        ],
        "properties": {
          "agentId": {
            "type": "string",
            "description": "Unique identifier of the subordinate agent",
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9-_]+$"
          },
          "role": {
            "type": "string",
            "description": "Role of the subordinate agent",
            "minLength": 1
          },
          "hiredAt": {
            "type": "string",
            "description": "ISO 8601 timestamp when agent was hired",
            "format": "date-time"
          },
          "hiredFor": {
            "type": "string",
            "description": "Purpose or goal for which the agent was hired",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "description": "Current status of the subordinate agent",
            "enum": ["active", "paused", "fired"],
            "default": "active"
          },
          "lastReportAt": {
            "type": ["string", "null"],
            "description": "ISO 8601 timestamp of last status report",
            "format": "date-time"
          },
          "healthStatus": {
            "type": "string",
            "description": "Health status of the subordinate agent",
            "enum": ["healthy", "warning", "critical", "unknown"],
            "default": "unknown"
          },
          "tasksAssigned": {
            "type": "integer",
            "description": "Number of tasks assigned to this subordinate",
            "minimum": 0,
            "default": 0
          },
          "tasksCompleted": {
            "type": "integer",
            "description": "Number of tasks completed by this subordinate",
            "minimum": 0,
            "default": 0
          },
          "firedAt": {
            "type": ["string", "null"],
            "description": "ISO 8601 timestamp when agent was fired (if applicable)",
            "format": "date-time"
          },
          "firedReason": {
            "type": "string",
            "description": "Reason for firing the agent (if applicable)",
            "minLength": 1
          }
        },
        "additionalProperties": false
      },
      "default": []
    },
    "summary": {
      "type": "object",
      "description": "Summary statistics of subordinate agents",
      "required": [
        "totalSubordinates",
        "activeSubordinates",
        "pausedSubordinates",
        "firedSubordinates",
        "hiringBudgetRemaining"
      ],
      "properties": {
        "totalSubordinates": {
          "type": "integer",
          "description": "Total number of subordinates (including fired)",
          "minimum": 0,
          "default": 0
        },
        "activeSubordinates": {
          "type": "integer",
          "description": "Number of currently active subordinates",
          "minimum": 0,
          "default": 0
        },
        "pausedSubordinates": {
          "type": "integer",
          "description": "Number of paused subordinates",
          "minimum": 0,
          "default": 0
        },
        "firedSubordinates": {
          "type": "integer",
          "description": "Number of fired subordinates",
          "minimum": 0,
          "default": 0
        },
        "hiringBudgetRemaining": {
          "type": "integer",
          "description": "Remaining hiring budget for this agent",
          "minimum": 0,
          "default": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
