{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://recursivemanager.dev/schemas/message.schema.json",
  "title": "Message Schema",
  "description": "Schema for RecursiveManager message frontmatter in inbox/outbox markdown files",
  "type": "object",
  "required": ["id", "from", "to", "timestamp", "priority", "channel", "read", "actionRequired"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "id": {
      "type": "string",
      "description": "Unique message identifier (format: msg-{timestamp}-{random})",
      "minLength": 1,
      "maxLength": 256,
      "pattern": "^msg-[0-9]+-[a-zA-Z0-9]+$"
    },
    "from": {
      "type": "string",
      "description": "Sender agent ID",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9-_]+$"
    },
    "to": {
      "type": "string",
      "description": "Recipient agent ID",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9-_]+$"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when message was created",
      "format": "date-time"
    },
    "priority": {
      "type": "string",
      "description": "Message priority level",
      "enum": ["low", "normal", "high", "urgent"],
      "default": "normal"
    },
    "channel": {
      "type": "string",
      "description": "Communication channel source",
      "enum": ["internal", "slack", "telegram", "email"]
    },
    "read": {
      "type": "boolean",
      "description": "Whether message has been read",
      "default": false
    },
    "actionRequired": {
      "type": "boolean",
      "description": "Whether message requires action from recipient",
      "default": false
    },
    "subject": {
      "type": "string",
      "description": "Message subject line (optional)",
      "minLength": 1,
      "maxLength": 1024
    },
    "threadId": {
      "type": "string",
      "description": "Thread identifier for grouped messages",
      "minLength": 1,
      "maxLength": 256,
      "pattern": "^thread-[a-zA-Z0-9-]+$"
    },
    "inReplyTo": {
      "type": "string",
      "description": "Message ID this is replying to",
      "minLength": 1,
      "maxLength": 256,
      "pattern": "^msg-[0-9]+-[a-zA-Z0-9]+$"
    },
    "externalId": {
      "type": "string",
      "description": "External message ID (for Slack, Telegram, etc.)",
      "minLength": 1,
      "maxLength": 512
    },
    "externalMetadata": {
      "type": "object",
      "description": "Platform-specific metadata",
      "properties": {
        "slackChannel": {
          "type": "string",
          "description": "Slack channel name or ID",
          "maxLength": 256
        },
        "slackTs": {
          "type": "string",
          "description": "Slack message timestamp",
          "maxLength": 128
        },
        "telegramChatId": {
          "type": "string",
          "description": "Telegram chat ID",
          "maxLength": 128
        },
        "telegramMessageId": {
          "type": "string",
          "description": "Telegram message ID",
          "maxLength": 128
        },
        "emailMessageId": {
          "type": "string",
          "description": "Email Message-ID header",
          "maxLength": 512
        },
        "emailThread": {
          "type": "string",
          "description": "Email thread/conversation ID",
          "maxLength": 512
        }
      },
      "additionalProperties": true
    },
    "readAt": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp when message was read",
      "format": "date-time"
    },
    "archivedAt": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp when message was archived",
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "description": "Tags for message categorization",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 128
      },
      "default": [],
      "maxItems": 100
    },
    "attachments": {
      "type": "array",
      "description": "List of attachments or file references",
      "items": {
        "type": "object",
        "required": ["filename", "path"],
        "properties": {
          "filename": {
            "type": "string",
            "description": "Original filename",
            "minLength": 1,
            "maxLength": 1024
          },
          "path": {
            "type": "string",
            "description": "Path to attachment file",
            "minLength": 1,
            "maxLength": 4096
          },
          "size": {
            "type": "integer",
            "description": "File size in bytes",
            "minimum": 0,
            "maximum": 1073741824
          },
          "mimeType": {
            "type": "string",
            "description": "MIME type of attachment",
            "minLength": 1,
            "maxLength": 256
          }
        },
        "additionalProperties": false
      },
      "default": [],
      "maxItems": 1000
    }
  },
  "additionalProperties": false
}
