{
  "name": "@recursivemanager/cli",
  "version": "1.1.4",
  "description": "Command-line interface for RecursiveManager",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "recursivemanager": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
